{
  "name": "payment-stream-processor",
  "version": "1.0.0",
  "description": "Payment stream processor service for AWS Lambda",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/* --sourcemap",
    "build:local": "esbuild src/index.local.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/* --sourcemap",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "lambda",
    "aws",
    "stream-processing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/batch": "^2.29.0",
    "@aws-lambda-powertools/idempotency": "^2.29.0",
    "@aws-lambda-powertools/logger": "^2.29.0",
    "@aws-lambda-powertools/metrics": "^2.29.0",
    "@aws-lambda-powertools/tracer": "^2.29.0",
    "@aws-sdk/client-dynamodb": "^3.987.0",
    "@aws-sdk/client-eventbridge": "^3.987.0",
    "@aws-sdk/lib-dynamodb": "^3.987.0",
    "@middy/core": "^6.4.5"
  }
}
